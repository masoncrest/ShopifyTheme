{% comment %}
  Hero section for homepage
{% endcomment %}

<section id="hero" class="hero-section" style="
  {%- if section.settings.background_image != blank -%}
    background-image: linear-gradient(rgba(26, 26, 26, {{ section.settings.overlay_opacity }}), rgba(26, 26, 26, {{ section.settings.overlay_opacity }})), url({{ section.settings.background_image | image_url: width: 1920 }});
  {%- else -%}
    background-image: linear-gradient(rgba(26, 26, 26, 0.4), rgba(26, 26, 26, 0.4)), url({{ 'image.png' | asset_url }});
  {%- endif -%}
  background-size: cover;
  background-position: center;
">
  <nav class="hero-nav">
    <a href="/" class="hero-nav-link">Home</a>
    <a href="/pages/about-us" class="hero-nav-link">About</a>
    <a href="/pages/faqs" class="hero-nav-link">FAQs</a>
    <a href="/pages/shipping" class="hero-nav-link">Shipping</a>
    <a href="/pages/contact-us" class="hero-nav-link">Contact</a>
    <div class="hero-nav-dropdown">
      <span class="hero-nav-link hero-nav-dropdown-trigger">Policies</span>
      <div class="hero-nav-dropdown-menu">
        <a href="/policies/privacy-policy" class="hero-nav-dropdown-link">Privacy Policy</a>
        <a href="/policies/terms-of-service" class="hero-nav-dropdown-link">Terms of Service</a>
        <a href="/policies/refund-policy" class="hero-nav-dropdown-link">Refund Policy</a>
        <a href="/policies/shipping-policy" class="hero-nav-dropdown-link">Shipping Policy</a>
      </div>
    </div>
  </nav>

  <div class="hero-content">
    {%- if section.settings.show_logo -%}
      <div style="margin-bottom: 2rem;">
        {%- if settings.logo != blank -%}
          <img src="{{ settings.logo | image_url: width: 250 }}" alt="{{ shop.name }}" width="250" height="auto" style="margin: 0 auto;">
        {%- else -%}
          <div class="header-logo" style="font-size: 1.5rem;">MASON CREST</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.settings.hero_title != blank -%}
      <h1 class="hero-title" style="color: {{ section.settings.title_color }};">
        {{ section.settings.hero_title }}
      </h1>
    {%- endif -%}

    {%- if section.settings.hero_subtitle != blank -%}
      <p class="hero-subtitle" style="color: {{ section.settings.subtitle_color }};">
        {{ section.settings.hero_subtitle }}
      </p>
    {%- endif -%}

    {%- if section.settings.button_text != blank -%}
      <a
        href="{{ section.settings.button_link | default: '/collections/all' }}"
        class="btn"
        style="
          background-color: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
          border-color: {{ section.settings.button_bg_color }};
        "
      >
        {{ section.settings.button_text }}
      </a>
    {%- endif -%}
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    padding-top: 6rem;
  }

  .hero-nav {
    position: absolute;
    top: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 2.5rem;
    padding: 1rem 2.5rem;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    border-radius: 50px;
    z-index: 10;
  }

  .hero-nav-link {
    color: #FFFFFF;
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    text-decoration: none;
    transition: opacity 0.3s ease;
    white-space: nowrap;
  }

  .hero-nav-link:hover {
    opacity: 0.7;
  }

  .hero-nav-dropdown {
    position: relative;
  }

  .hero-nav-dropdown-trigger {
    cursor: pointer;
  }

  .hero-nav-dropdown-menu {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease, margin-top 0.3s ease;
  }

  .hero-nav-dropdown:hover .hero-nav-dropdown-menu {
    opacity: 1;
    visibility: visible;
    margin-top: 1.5rem;
  }

  .hero-nav-dropdown-link {
    color: #FFFFFF;
    font-size: 0.85rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    text-decoration: none;
    transition: opacity 0.3s ease;
    white-space: nowrap;
    text-align: center;
  }

  .hero-nav-dropdown-link:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding-top: 8rem;
    }

    .hero-nav {
      flex-wrap: wrap;
      gap: 1.5rem;
      padding: 1rem 1.5rem;
      top: 1rem;
      width: calc(100% - 2rem);
      max-width: 600px;
      justify-content: center;
    }

    .hero-nav-link {
      font-size: 0.8rem;
    }

    .hero-nav-dropdown-link {
      font-size: 0.75rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Show Logo",
      "default": true
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Headline",
      "default": "Premium Fitness For Peak Performance"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Subheadline",
      "default": "Curated gear and wellness essentials for those who demand excellence"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop All Products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color (if no image)",
      "default": "#1A1A1A"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Image Overlay Opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 0.5
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
